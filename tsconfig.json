{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "allowJs": true,
    "pretty": true,
    "declaration": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "strictBindCallApply": false,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules/*", 
    "**/__tests__/*",
    "**/__mocks__/*"
  ],
  "ts-node": {
    "files": true,
  },
}